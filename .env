# Database Configuration (Docker PostgreSQL)
DB_HOST=localhost           # ← Because port 5432 is exposed to your Ubuntu host
DB_PORT=5432
DB_NAME=travel_db
DB_USER=travel_user
DB_PASSWORD=travel_pass

# OR Alternative if you want to use within Docker network:
# DB_HOST=travel_postgres   # ← Docker container name
# But your Node app is running on Ubuntu host, not in a container

# Server Configuration
PORT=3000
NODE_ENV=development

# RapidAPI Configuration
BOOKING_API_KEY=your_actual_rapidapi_key_here
BOOKING_API_HOST=booking-com15.p.rapidapi.com
BOOKING_API_URL=https://booking-com15.p.rapidapi.com/api/v1